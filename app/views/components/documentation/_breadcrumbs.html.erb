<ol class="ml-4 flex text-sm leading-6 whitespace-nowrap min-w-0">  
  <% breadcrumb_trail do |crumb| %>
    <% if crumb.current? %>
      <li class="font-semibold text-slate-900 truncate dark:text-slate-200"><%= crumb.name %></li>
    <% else %>
      <li class="flex items-center dark:text-slate-400">
          <%= crumb.name %>
          <svg width="3" height="6" aria-hidden="true" class="mx-3 overflow-visible text-slate-400">
            <path d="M0 0L3 3L0 6" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"></path>
          </svg>
      </li>
    <% end %>
  <% end %>
</ol>
