<% content_for :side_nav do %>
  <%= render 'components/documentation/side_nav_search' %>
  <ul class="overflow-scroll h-full">
    <li class="mt-12 lg:mt-8">
      <h3 class="mb-8 lg:mb-3 font-semibold text-slate-900 dark:text-slate-200">Getting started</h3>
      <ul class="space-y-6 lg:space-y-2 border-l border-slate-100 dark:border-slate-800">
        <li>
          <%= link_to "Intro", "#", class: "block border-l pl-4 -ml-px text-primary-500 border-current font-semibold dark:text-primary-400" %>
        </li>
      </ul>
    </li>
    <li class="mt-12 lg:mt-8">
      <h3 class="mb-8 lg:mb-3 font-semibold text-slate-900 dark:text-slate-200">Classes (v<%= Current.version.number %>)</h3>
      <ul class="space-y-6 lg:space-y-2 border-l border-slate-100 dark:border-slate-800">
        <% Current.version.klasses.each do |klass| %>
          <li>
            <%= link_to klass_path(klass), class: "block border-l pl-4 -ml-px border-transparent hover:border-slate-400 dark:hover:border-slate-500 text-slate-700 hover:text-slate-900 dark:text-slate-400 dark:hover:text-slate-300" do %>
              <%= klass.name %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </li>
  </ul>
<% end %>

<div class="p-4">
  <header id="header" class="relative z-20">
    <div>
      <p class="mb-2 text-sm leading-6 font-semibold text-primary-500 dark:text-primary-400">Ruby version</p>
      <div class="flex items-center">
        <h1 class="inline-block text-2xl sm:text-3xl font-bold text-slate-900 tracking-tight dark:text-slate-200"><%= Current.version.number %></h1>
      </div>
    </div>
    <p class="mt-2 text-lg text-slate-700 dark:text-slate-400">Condensed explanation to give an idea</p>
  </header>
</div>