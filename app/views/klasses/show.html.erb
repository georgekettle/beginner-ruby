<div class="flex">
  <div class="hidden md:block md:w-1/3 lg:w-1/4 p-4 pt-16 h-screen relative">
    <div class="absolute top-0 left-0 bg-white p-4 w-full">
      <h2 class="text-lg font-semibold"><%= @klass.name %></h2>
    </div>
    <ul class="overflow-scroll h-full">
      <% Section.categories.keys.reverse.each do |cat| %>
        <%= render 'section_category', klass: @klass, category: cat %>
      <% end %>
    </ul>
  </div>
  <div class="w-full md:w-2/3 lg:w-3/4 p-4">
    <h1 class="font-bold text-4xl"><%= @klass.name %></h1>
  </div>
</div>